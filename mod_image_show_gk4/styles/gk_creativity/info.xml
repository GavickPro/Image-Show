<?xml version="1.0" encoding="UTF-8"?>
<style>
	<info>
		<name>gk_creativity</name>
		<author>GavickPro</author>
		<desc>Image Show GK4 style for Creativity template.</desc>
		<version>1.0</version>
	</info>
	<config>
		<field type="text" name="image_width" label="Image width" desc="Slide image width in pixels" default="640" unit="px" />
		<field type="text" name="image_height" label="Image height" desc="Slide image height in pixels" default="320" unit="px" />
		<field type="text" name="image_bg" label="Image background color" desc="Slide image background as hexdecimal value" default="#000000" unit="" />	
		<field type="text" name="quality" label="Image quality" desc="Quality of images (used in the JPG images) - percentage value between 0 and 100." default="95" unit="%" />
				
		<field type="select" name="title_anim" label="Title animation" desc="You can specify the default title animation" default="opacity">
			<option value="none">None</option>
			<option value="opacity">Opacity</option>
			<option value="slide_vertical">Vertical slide</option>
			<option value="slide_left">Left slide</option>
			<option value="slide_right">Right slide</option>
			<option value="scale">Scale</option>
			<option value="skew_left">Skew left</option>
			<option value="skew_right">Skew right</option>
			<option value="rotate_x_center">Rotate X (center)</option>
			<option value="rotate_x_top">Rotate X (top)</option>
			<option value="rotate_x_bottom">Rotate X (bottom)</option>
			<option value="rotate_y_center">Rotate Y (center)</option>
			<option value="rotate_y_left">Rotate Y (left)</option>
			<option value="rotate_y_right">Rotate Y (right)</option>
		</field>
		
		<field type="select" name="text_anim" label="Text animation" desc="You can specify the default text animation" default="opacity">
			<option value="none">None</option>
			<option value="opacity">Opacity</option>
			<option value="slide_vertical">Vertical slide</option>
			<option value="slide_left">Left slide</option>
			<option value="slide_right">Right slide</option>
			<option value="scale">Scale</option>
			<option value="skew_left">Skew left</option>
			<option value="skew_right">Skew right</option>
			<option value="rotate_x_center">Rotate X (center)</option>
			<option value="rotate_x_top">Rotate X (top)</option>
			<option value="rotate_x_bottom">Rotate X (bottom)</option>
			<option value="rotate_y_center">Rotate Y (center)</option>
			<option value="rotate_y_left">Rotate Y (left)</option>
			<option value="rotate_y_right">Rotate Y (right)</option>
		</field>
		
		<field type="select" name="bganim" label="Background animation" desc="You can specify the background animation" default="opacity">
			<option value="opacity">Opacity</option>
			<option value="horizontal">Horizontal Slide</option>
			<option value="vertical">Vertical Slide</option>
		</field>
		
		<field type="switch" name="pagination" label="Pagination" desc="You can enable the pagination." default="1" class="gk_switch" />
		
		<field type="text" name="animation_speed" label="Animation speed" desc="Animation speed in miliseconds" default="500" unit="ms" />
		<field type="text" name="animation_interval" label="Animation interval" desc="Animation interval in miliseconds" default="5000" unit="ms" />
		<field type="switch" name="autoanimation" label="Autoanimation" desc="Autoanimation of the slides" default="1" class="gk_switch" />
	</config>
</style>